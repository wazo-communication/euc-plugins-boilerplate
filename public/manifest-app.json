{
  "manifestVersion": "0.1",
  "version": "1.0.0",
  "id": "boilerplate",
  "packageName": "com.wazo.boilerplate",
  "productType": "app",
  "developer": {
    "name": "Wazo",
    "websiteUrl": "https://wazo.io",
    "privacyUrl": "https://wazo.io/privacy-policy/"
  },
  "icons": {
    "color": "./logo-full.svg"
  },
  "name": {
    "short": "Plugins Boilerplate (App)",
    "full": "EUC Plugins Boilerplate"
  },
  "description": {
    "short": "Short description of your app (<= 80 chars)",
    "full": "Full description of your app (<= 4000 chars)"
  },
  "localizationInfo": {
    "defaultLanguageTag": "en",
    "additionalLanguages": [
      {
        "languageTag": "fr",
        "file": "manifest-app-fr.json"
      }
    ]
  },
  "staticTabs": [
    {
      "entityId": "my-wda-ma-plugin",
      "context": [
        "sidebarTab",
        "mobileTab"
      ],
      "name": "My App's Plugin",
      "contentUrl": "./wda.html",
      "icon": "./plugin-icon.svg",
      "mobileIcon": "chatbubble-ellipses-outline"
    }
  ],
  "backgroundScript": "./src/background.ts"
}
